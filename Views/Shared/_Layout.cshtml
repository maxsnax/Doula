<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Doula</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Doula.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md border-bottom box-shadow mb-3">
            <div class="form-check form-switch" id="btnSwitch" style="margin-left: 5%; font-size: 12px; white-space: nowrap;">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label id="modeLabel" class="form-check-label" for="flexSwitchCheckDefault">Dark Mode</label>
            </div>
            <div class="container-fluid d-flex flex-column align-items-center header-background" style="margin-right: 5%;">
                <a class="navbar-brand mx-auto" asp-area="" asp-controller="Home" asp-action="Index">Shirley The Death Doula</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="body-width-adjustment footer-adjustment">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer footer-background-image">
        <div style="text-align: center; margin-bottom: 0px;">
            <p>Disclaimer: Shirley Reimer Death Doula is for consulting, education and emotional support.</p>
            <p>This is not in any way considered to be a funeral establishment or licensed mental health establishment.</p>
        </div>
        <div class="container">
            &copy; 2025 - Doula - <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
        </div>
    </footer>
    <script type="text/javascript">
        document.getElementById('btnSwitch').addEventListener('click', () => {
            if (document.documentElement.getAttribute('data-bs-theme') == 'dark') {
                document.documentElement.setAttribute('data-bs-theme', 'light')
                modeLabel.innerText = "Light Mode";
            }
            else {
                document.documentElement.setAttribute('data-bs-theme', 'dark')
                modeLabel.innerText = "Dark Mode";
            }
        })
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
